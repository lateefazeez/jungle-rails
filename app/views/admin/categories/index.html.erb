<section class="categories-show">

  <header class="page-header">
    <h1>
      Database Categories
      <small>(<%= pluralize @categories.size, 'categories' %>)</small>
    </h1>
  </header>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Category ID</th>
        <th>Category Name</th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.id %>
        </td>
        <td>
          <%= category.name %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</section>