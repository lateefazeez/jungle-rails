<section class="admin-products-new">

  <header class="page-header">
    <h1>User &raquo; Login</h1>
  </header>


  <%= form_tag(:login, class: "col-sm-6 col-sm-offset-1") do %>
    
    <div class="form-group">
      <%= label_tag :email, 'Email address' %>
      <%= text_field_tag :email, "", class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Login", class: "btn btn-primary mb-2" %>
    </div>
    
    
  <% end %>

</section>
